<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
<Popover placement="Horizontal" contentWidth="25rem" offsetX="{popover>/offsetX}" offsetY="{popover>/offsetY}" showHeader="false">
<form:SimpleForm maxContainerCols="2"
      editable="false" layout="ResponsiveGridLayout"
      labelSpanL="5" labelSpanM="5" labelSpanS="5" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsL="2"
      columnsM="2" columnsS="2">
       <form:content> 
        <Label text="{i18n>name}" />
        <Text text='{popover>/name}' />
        <Label text="{i18n>salary}" />
        <Text text='{popover>/salary}' />
        <Label text="{i18n>workyear}" />
        <Text text="{popover>/year}" />
       </form:content>  
</form:SimpleForm> 
</Popover>
</core:FragmentDefinition>